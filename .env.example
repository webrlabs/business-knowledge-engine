# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
# AZURE_OPENAI_API_KEY=your-api-key-here (optional when using managed identity)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Cosmos DB (SQL API)
COSMOS_DB_ENDPOINT=https://your-cosmos.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key-here
COSMOS_DB_DATABASE=knowledge-platform
COSMOS_DB_DOCUMENTS_CONTAINER=documents
COSMOS_DB_AUDIT_CONTAINER=audit-logs

# Azure AI Search
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
# AZURE_SEARCH_API_KEY=your-search-key-here (optional when using managed identity)
AZURE_SEARCH_INDEX_NAME=documents

# Azure Blob Storage (ADLS Gen2)
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key-here
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_DOCUMENTS=documents
AZURE_STORAGE_CONTAINER_PROCESSED=processed

# Azure Key Vault
AZURE_KEYVAULT_URI=https://your-keyvault.vault.azure.net/

# Azure AI Document Intelligence
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-form-recognizer.cognitiveservices.azure.com/
# AZURE_FORM_RECOGNIZER_KEY=your-form-recognizer-key (optional when using managed identity)

# Microsoft Entra ID (Azure AD)
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret
AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback
AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
AZURE_AD_AUDIENCE=api://your-backend-app-uri

# Frontend (public) Entra ID + API
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=your-client-id
NEXT_PUBLIC_AZURE_AD_TENANT_ID=your-tenant-id
NEXT_PUBLIC_AZURE_AD_REDIRECT_URI=http://localhost:3001/auth/callback
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_API_SCOPE=api://your-backend-app-uri/access_as_user

# API Management
APIM_GATEWAY_URL=https://your-apim.azure-api.net
APIM_SUBSCRIPTION_KEY=your-subscription-key

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-instrumentation-key
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.applicationinsights.azure.com/

# Application Configuration
NODE_ENV=development
PORT=8080
API_PORT=8080
LOG_LEVEL=info

# Security
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
ENABLE_GAMIFICATION=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_DARK_MODE=true

# Compliance
DATA_REGION=us-east
ENABLE_AUDIT_LOGGING=true
ENABLE_PII_REDACTION=true
